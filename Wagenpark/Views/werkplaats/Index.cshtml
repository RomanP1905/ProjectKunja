@model IEnumerable<Wagenpark.Models.werkplaat>

@{
    ViewBag.Title = "Werkplaatsen";
    @Styles.Render("~/Content/css")
}

<h2>Werkplaats</h2>

<p>
    @Html.ActionLink("Voeg werkplaats toe", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.naam)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.naam)
            </td>
            <td>
                @Html.ActionLink("Wijzigen", "Edit", new { id = item.werkplaatsnr }, new { @class = "btn btn-default" }) 
                @Html.ActionLink("Details", "Details", new { id = item.werkplaatsnr }, new { @class = "btn btn-primary" }) 
                @Html.ActionLink("Verwijderen", "Delete", new { id = item.werkplaatsnr }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
