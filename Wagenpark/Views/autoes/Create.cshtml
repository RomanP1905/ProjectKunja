@model Wagenpark.Models.auto

@{
    ViewBag.Title = "Create";
}

<h2>Maak een auto aan</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>auto</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label style="color: white;" class="control-label col-md-2" for="auto_id">serie-nummer</label>        <div class="col-md-10">
            @Html.EditorFor(model => model.auto_id, new { htmlAttributes = new { @class = "form-control", type = "number", min = "1", max = "9999999999", placeholder = "1234567890" } })
            @Html.ValidationMessageFor(model => model.auto_id, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.kenteken, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.kenteken, new { htmlAttributes = new { @class = "form-control", type = "text", placeholder = "29-AB-29" } })
            @Html.ValidationMessageFor(model => model.kenteken)
            @Html.ValidationMessageFor(model => model.kenteken, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.merk, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.merk, new { htmlAttributes = new { @class = "form-control", placeholder = "Audi" } })
            @Html.ValidationMessageFor(model => model.merk, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Type, new { htmlAttributes = new { @class = "form-control", placeholder = "A7" } })
            @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label style="color: white;" class="control-label col-md-2" for="DEALER_DealerNr">dealernaam</label>
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.DEALER_DealerNr, ViewBag.DealerList as SelectList, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DEALER_DealerNr, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Maak" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Terug naar lijst", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
