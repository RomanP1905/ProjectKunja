@model IEnumerable<Wagenpark.Models.auto>

@{
    ViewBag.Title = "Auto's";
}


@{
    /*Zorgt er voor dat alleen de dealers hun eigen auto's kunnen terugvinden*/
    var ifStatement = 99999;
}
@if (User.IsInRole("Dealer0"))
{
    ifStatement = 0;
}
@if (User.IsInRole("Dealer1"))
{
    ifStatement = 1;
}
@if (User.IsInRole("Dealer2"))
{
    ifStatement = 2;
}
@if (User.IsInRole("Dealer3"))
{
    ifStatement = 3;
}
@if (User.IsInRole("Dealer5"))
{
    ifStatement = 5;
}
@if (User.IsInRole("Dealer5"))
{
    ifStatement = 5;
}
@if (User.IsInRole("Dealer6"))
{
    ifStatement = 6;
}
@if (User.IsInRole("Dealer7"))
{
    ifStatement = 7;
}

<p>@ifStatement</p>
<h2>Auto's</h2>
<p style="color: white;">Zoek op kenteken of op merk.</p>
<div id="Searching" style="color:black;">
    @using (Html.BeginForm("index", "autoes", FormMethod.Get))

    {
        @Html.TextBox("Searching")<input type="submit" value="Zoek" style="color:black;" />

    }
</div>
<p>
    @Html.ActionLink("Voeg een nieuwe auto toe", "Create")
</p>



<table class="table">
    <tr>
        <th>
            serienummer
        </th>
        <th>
            @Html.DisplayNameFor(model => model.kenteken)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.merk)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            dealernummer
        </th>
        <th></th>
    </tr>
    <tbody>
        @if (Model.Count() == 0)
        {

            <tr>
                <td colspan="3" style="color:red;">
                    geen auto gevonden.
                </td>
            </tr>
        }
        else
        {

            if (User.IsInRole("Admin"))
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.auto_id
                        </td>
                        <td>
                            @item.kenteken
                        </td>
                        <td>
                            @item.merk
                        </td>
                        <td>
                            @item.Type
                        </td>
                        <td>
                            @item.DEALER_DealerNr
                        </td>
                        <td>
                            @Html.ActionLink("Wijzigen", "Edit", new { id = item.auto_id }, new { @class = "btn btn-default" })
                            @Html.ActionLink("Details", "Details", new { id = item.auto_id }, new { @class = "btn btn-primary" })
                            @Html.ActionLink("Verwijderen", "Delete", new { id = item.auto_id }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>

                }
            }
            else
            {
                foreach (var item in Model)
                {
                    if (item.DEALER_DealerNr == ifStatement)
                    {
                        <tr>
                            <td>
                                @item.auto_id
                            </td>
                            <td>
                                @item.kenteken
                            </td>
                            <td>
                                @item.merk
                            </td>
                            <td>
                                @item.Type
                            </td>
                            <td>
                                @item.DEALER_DealerNr
                            </td>
                            <td>
                                @Html.ActionLink("Wijzigen", "Edit", new { id = item.auto_id }, new { @class = "btn btn-default" })
                                @Html.ActionLink("Details", "Details", new { id = item.auto_id }, new { @class = "btn btn-primary" })
                                @Html.ActionLink("Verwijderen", "Delete", new { id = item.auto_id }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                }
            }


        }
    </tbody>
</table>
